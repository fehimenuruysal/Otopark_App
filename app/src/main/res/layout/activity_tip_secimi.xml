<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aotopark"
    tools:context=".Activity.tipSecimi">

    <Button
        android:id="@+id/gorevliButton"
        android:layout_width="0dp"
        android:layout_height="83dp"
        android:layout_marginBottom="131dp"
        android:layout_marginEnd="38dp"
        android:layout_marginStart="28dp"
        android:background="@android:color/background_dark"
        android:onClick="gorevli_gecis"
        android:text="GÖREVLİ"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/musteriButonu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/musteriButonu"
        android:layout_width="161dp"
        android:layout_height="86dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="1dp"
        android:background="@android:color/background_dark"
        android:onClick="musteri_gecis"
        android:text="MÜŞTERİ"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gorevliButton"
        app:layout_constraintTop_toTopOf="@+id/gorevliButton" />

    <TextView
        android:id="@+id/textView4"
        style="@android:style/Widget.Material.ProgressBar.Small.Title"
        android:layout_width="425dp"
        android:layout_height="0dp"
        android:layout_marginBottom="297dp"
        android:layout_marginTop="26dp"
        android:background="@android:color/background_dark"
        android:text="BSAT OTOPARK "
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gorevliButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>